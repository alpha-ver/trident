= form_for @setting, html: { class: "form-horizontal", role: "form" } do |f|
  -if @setting.errors.any?
    .alert.alert-danger.alert-dismissable{role: "alert"}
      %button.close{type: "button", data: {dismiss: "alert"} }
        %span{aria: {hidden: "true"} } &times;
        %span.sr-only Close
      %h4= "#{pluralize(@setting.errors.count, "error")} prohibited this setting from being saved:"

      %ul
        - @setting.errors.full_messages.each do |msg|
          %li= msg

  .form-group
    = f.label :group, class: 'col-sm-2 control-label'
    .col-sm-10
      = f.text_field :group, class: 'form-control'
  .form-group
    = f.label :name, class: 'col-sm-2 control-label'
    .col-sm-10
      = f.text_field :name, class: 'form-control'
  .form-group
    = f.label :type, class: 'col-sm-2 control-label'
    .col-sm-10
      = f.text_field :type, class: 'form-control'
  .form-group
    = f.label :v_i, class: 'col-sm-2 control-label'
    .col-sm-10
      = f.number_field :v_i, class: 'form-control'
  .form-group
    = f.label :v_s, class: 'col-sm-2 control-label'
    .col-sm-10
      = f.text_field :v_s, class: 'form-control'
  .form-group
    = f.label :v_t, class: 'col-sm-2 control-label'
    .col-sm-10
      = f.text_area :v_t, class: 'form-control'
  .form-group
    = f.label :v_j, class: 'col-sm-2 control-label'
    .col-sm-10
      = f.text_field :v_j, class: 'form-control'
  .form-group
    = f.label :v_b, class: 'col-sm-2 control-label'
    .col-sm-10
      = f.check_box :v_b, class: 'form-control'
  .form-group
    .col-sm-offset-2.col-sm-10
      = f.submit class: 'btn btn-primary'
